# =============================================================================
# ROSTER SAAS - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure values for local development
# For production, see .env.production.example
# =============================================================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/roster_saas?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
# Generate secure secret with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (comma-separated origins, use * for development)
CORS_ORIGIN=*

# Logging level: error, warn, info, http, verbose, debug
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Norwegian Labor Law Compliance (Arbeidsmiljøloven)
# -----------------------------------------------------------------------------
# Minimum days before roster must be published (§ 10-2)
ROSTER_PUBLISH_DEADLINE_DAYS=14
# Minimum daily rest hours (§ 10-8)
MIN_DAILY_REST_HOURS=11
# Minimum weekly rest hours (§ 10-8)
MIN_WEEKLY_REST_HOURS=35
# Maximum normal work hours per day (§ 10-4)
MAX_DAILY_WORK_HOURS=9
# Maximum normal work hours per week (§ 10-4)
MAX_WEEKLY_WORK_HOURS=40
# Data retention years for audit logs
AUDIT_RETENTION_YEARS=2

# -----------------------------------------------------------------------------
# Optional Services
# -----------------------------------------------------------------------------
# Redis cache (for production session/cache storage)
# REDIS_URL=redis://localhost:6379

# Email notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password

# -----------------------------------------------------------------------------
# Railway Deployment (auto-configured in production)
# -----------------------------------------------------------------------------
# When deploying to Railway, these are provided automatically:
# - DATABASE_URL (via Postgres plugin)
# - PORT (auto-assigned by Railway)
