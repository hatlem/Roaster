# Database
DATABASE_URL="postgresql://user:password@localhost:5432/roster_saas?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Norwegian Labor Law Compliance
# Minimum days before roster must be published
ROSTER_PUBLISH_DEADLINE_DAYS=14
# Minimum daily rest hours (default: 11)
MIN_DAILY_REST_HOURS=11
# Minimum weekly rest hours (default: 35)
MIN_WEEKLY_REST_HOURS=35
# Maximum normal work hours per day (default: 9)
MAX_DAILY_WORK_HOURS=9
# Maximum normal work hours per week (default: 40)
MAX_WEEKLY_WORK_HOURS=40
# Data retention years for audit (default: 2)
AUDIT_RETENTION_YEARS=2
